doctype html
html(lang="en")
  include includes/head.pug
  body
    //- Navigation
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom")
      div(class="container")
        
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
            
        div(class="collapse navbar-collapse" id="navbarResponsive")
          ul(class="navbar-nav ml-auto")
            li(class="nav-item")
              a(class="nav-link" href="/") Home
            li(class="nav-item")
              a(class="nav-link" target="_blank" href="https://github.com/abdulaz1z/nodejs-pug-starter") Documentation
                  
    
    //- Page Content
    section
      div(class="container")
        div(class="row")
          div(class="col-lg-6")
            h1(class="mt-5 text-black") Please Add or Modify Digital assets details
            p(class= "text-dark") 
table.table.table-hover.table-striped.table-bordered
    thead
      tr
        th Add/Modify
        th digi_id
        th digi_name
        th digi_mod_date
        th digi_type
        th Value of Assets
        th digi_parent_id
        th Assets Allocation
        
    tbody
    - for (var i = 0; i < digi.length; ++i) {
      tr
      td
       input(type="checkbox", id=digi.digi_id, 
                     name=digi.digi_id, value=digi.digi_id)
      
      td(scope='row') #{i+1}
      td #{digi[i]['digi_name']}
      td #{digi[i]['digi_mod_date']}
      td #{digi[i]['digi_type']}
      td #{digi[i]['value']}
      td #{digi[i]['digi_parent_id']}
      td #{digi[i]['percentage_share']}
    - }
    form(method="get" action="/add_digi")
          input(type="submit", value="Add Digital Assets") 
    form(method="get" action="/index")
          input(type="submit", value="Back to Home")    
    script(src='vendor/jquery/jquery.min.js')  
    script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')
    
